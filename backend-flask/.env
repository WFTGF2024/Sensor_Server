# Sensor_Flask Environment Variables
# Copy this file to .env and update the values for your environment

# Flask Environment
FLASK_ENV=development  # development, production, testing
FLASK_SECRET_KEY=your-secure-random-secret-key-here
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Database Configuration
DB_HOST=localhost
DB_USER=zjh
DB_PASSWORD=your-database-password-here
DB_NAME=modality
DB_CHARSET=utf8mb4

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=True
REDIS_CACHE_TTL=3600

# File Upload Configuration
UPLOAD_ROOT=/home/wft/Sensor_Server/data/download
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=10  # seconds
RATE_LIMIT_MAX_CALLS=1000

# Logging Configuration
LOG_DIR=log
LOG_LEVEL=INFO

# Performance Monitoring
MONITOR_ENABLED=True
MONITOR_SAMPLE_RATE=0.1
MONITOR_METRICS_RETENTION=86400

# Testing Configuration (only for testing environment)
TEST_DB_NAME=modality_test